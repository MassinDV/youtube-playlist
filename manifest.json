{
    "name": "YouTube Playlist",
    "action": {},
    "manifest_version": 3,
    "version": "0.1",
    "description": "update videos url in a playlist to open a video without the playlist",
    "permissions": [
        "tabs"
    ],
    "host_permissions": [
        "*://*.youtube.com/playlist*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/playlist*"
            ],
            "js": [
                "background.js"
            ]
        }
    ],
    "icons": {
        "16": "img/icon_16.png",
        "32": "img/icon_32.png",
        "64": "img/icon_64.png",
        "128": "img/icon_128.png"
    }
}
